				<Page id="spage" title="{i18n>stitle} {SalesOrder}" showNavButton="true" navButtonPress="gohome">
					<content>
				     <Panel>
				     <headerToolbar>
				     	<Toolbar>
				     		
				     	<Title text="Details of {SalesOrder}" level="H2"/>
				     		
				     	</Toolbar>
				     </headerToolbar>
				     <content>
				     <f:SimpleForm title="Sales Order Details">
				     <f:content>
				     <Label text="{i18n>amt}"/>	
				     <Text text="{TotalNetAmount}"/>
				     </f:content>
				     </f:SimpleForm>
				     </content>
				     </Panel>
					</content>
